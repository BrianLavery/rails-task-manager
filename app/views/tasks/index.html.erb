<h1>All tasks</h1>

<% @tasks.each do |task| %>
  <div class="d-flex align-items-center">
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task), class: 'mx-2'  %>
      <%= link_to task_path(task), class: 'mx-2', data: { confirm: "Are you sure?", method: :delete, remote: true } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Add a new task", new_task_path%>
</div>

