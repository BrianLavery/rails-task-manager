<div class="d-flex justify-content-between align-items-center my-3">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path(@task), class: 'btn btn-secondary'%>
</div>


<div class="task-details">
  <%= @task.details %>
</div>

<div class="d-flex align-items-center my-4 border-bottom border-light">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <p class="pl-2">This task is completed</p>
  <% else %>
    <i class="far fa-square"></i>
    <p class="pl-2">This task is not completed, yet</p>
  <% end %>
</div>

<%= link_to "Back to list", tasks_path%>
